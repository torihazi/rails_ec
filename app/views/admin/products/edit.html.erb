<% provide(:title, '更新') %>
<div class="row">
  <div class="col-md">
    <%= form_with model: @product, url: admin_product_path(@product) do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="form-group">
        <%= f.label :name, class: "form-label"%>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form=group">
        <%= f.label :price, class: "form-label"%>
        <%= f.number_field :price, min: 1, class: "form-control" %>
      </div>
      <div class="form=group">
        <%= f.label :description, class: "form-label"%>
        <%= f.text_area :description, rows: 4, class: "form-control" %>
      </div>
      <div class="form=group">
        <%= f.label :image, class: "form-label"%>
        <%= f.file_field :image, accept: "image/jpeg, image/png", class: "form-control" %>
        <%= image_tag @product.image.variant(:display) %>
      </div>
      <div class="row center-block text-center mt-4">
        <div class="col-3"></div>
        <div class="col-6">
          <%= f.submit "更新する", class: "btn btn-outline-dark"%>
        </div>
        <div class="col-3"></div>
      </div>
    <% end %>
  </div>
</div>
