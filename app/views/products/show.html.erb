<!-- Product section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6">
        <%= image_tag @product.image.variant(:display), class: "card-img-top mb-5 mb-md-0", alt: "..." %>
      </div>
      <div class="col-md-6">
        <h1 class="display-5 fw-bolder"><%= @product.name %></h1>
        <div class="fs-5 mb-5">
          <span><%= number_to_currency(@product.price, locale: "ja") %></span>
        </div>
        <p class="lead"><%= simple_format(h(@product.description)) %></p>
        <div>
          <%= form_with url: cart_items_path(product_id: @product.id), class: "d-flex"  do |f| %>
            <div class="form-group me-3">
              <%= f.number_field :quantity, min: 1, value: 1, class: "form-control text-center" %>
            </div>
            <%= button_tag type: "submit", class: "btn btn-outline-dark flex-shrink-0" do %>
              <i class="bi-cart-fill me-1"></i>
              Add to cart
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Related items section-->
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4">Related products</h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @related_products.each do |product| %>
        <div class="col mb-5">
          <div class="card h-100">
            <!-- Product image-->
            <%= link_to (image_tag product.image.variant(:display), class: "card-img-top"), product %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= product.name %></h5>
                <!-- Product price-->
                <%= number_to_currency(product.price, locale: "ja") %>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
