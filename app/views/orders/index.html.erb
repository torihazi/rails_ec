<% provide(:title, "購入明細一覧")%>
<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>住所1</th>
      <th>注文日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th><%= order.id %></th>
        <th><%=  "#{order.first_name} #{order.last_name}"  %>
          <th><%=  order.address_line1 %>
            <td><%= l order.created_at %></td>
            <td>
              <%= link_to order_path(order), class: 'btn btn-outline-secondary' do %>
                <i class="bi bi-search"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- ページネーション -->
    <%= paginate @orders, theme: 'bootstrap-5'%>
